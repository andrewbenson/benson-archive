<footer class="page-footer">
    <div>
        {% if not page.isLast() %}
            <div class="float-left">
                <i class="fa-solid fa-arrow-left"></i> <a href="{{ page.prevSibling().slug }}">Previous Article</a>
            </div>
        {% endif %}
        {% if not page.isFirst() %}
            <div class="float-right">
                <a href="{{ page.nextSibling().slug }}">Next Article</a> <i class="fa-solid fa-arrow-right"></i>
            </div>
        {% endif %}
    </div>
</footer>